<?xml version="1.0" encoding="UTF-8"?>
<editors>
    <!-- Boolean On/Off -->
    <editor id="bool">
        <range uom="2" subset="0-1" nls="bool" />
    </editor>
    
    <!-- Percentage 0-100 -->
    <editor id="percent">
        <range uom="51" min="0" max="100" step="1" />
    </editor>
    
    <!-- Raw byte 0-255 -->
    <editor id="raw_byte">
        <range uom="56" min="0" max="255" step="1" />
    </editor>
    
    <!-- Raw count (for LED count, device count, etc.) -->
    <editor id="raw_count">
        <range uom="56" min="0" max="65535" step="1" />
    </editor>
    
    <!-- Effect selector - common WLED effects -->
    <editor id="effect">
        <range uom="25" subset="0-117" nls="effect" />
    </editor>
    
    <!-- Palette selector - common WLED palettes -->
    <editor id="palette">
        <range uom="25" subset="0-55" nls="palette" />
    </editor>
    
    <!-- Preset selector 1-16 -->
    <editor id="preset">
        <range uom="25" subset="1-16" nls="preset" />
    </editor>
</editors>

